{sys, [
       {lib_dirs, ["../../apps","../../deps"]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "nd", "1",
        [
         kernel,
         stdlib,
         sasl,
         n1,
         gproc,
         dist,
         crypto,
         snmp,
         os_mon
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "nd"},
       {profile, embedded},
       {incl_cond, exclude},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, n1, [{incl_cond, include}]},
       {app, gproc, [{incl_cond, include}]},
       {app, gen_leader, [{incl_cond, include}]},
       {app, dist, [{incl_cond, include}]},
       {app, snmp, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, os_mon, [{incl_cond, include}]}
      ]}.

{target_dir, "node"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {copy, "files/nd", "bin/nd"},
           {copy, "files/sys.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"},
           {copy, "files/snmp/agent", "etc/agent"},
           {copy, "files/snmp/manager", "etc/manager"},
           {copy, "files/snmp/mibs", "etc/mibs"}
          ]}.
